@import 'fonts.css'

* {
    margin 0
    padding 0
    box-sizing border-box
}


font-regular = 'SourceSansPro-Regular'
font-bold = 'SourceSansPro-Bold'


body {
    font-family font-regular
    color white
}


.nav {
    width 100%
    padding 10px 12.5%
    
    display flex
    justify-content space-between
    
    background-color rgba(0, 0, 0,.5)
    
    position fixed
    top 0
    left 0
    z-index 10
    
    .logo {
        display flex
        align-items center
        img {
            width 65px
            height 65px
        }
        p {
            padding-left 20px
            font-family font-bold
            font-size 20px
        }
    }
    
    .menu {
        display flex
        align-items  center
        &__item {
            list-style none
            margin-left 40px
            
            a {
                text-transform uppercase
                text-decoration none
                color white
                
                &:hover {
                    border-bottom 2px solid #b42626
                }
            }
        }
    }
}

.about {
    height 100vh
    padding 350px 5%
     
    display flex
    flex-direction column
    
    background url(../images/1.jpg) no-repeat
    background-size cover
    
    position relative
    
    &:before {
        display block
        content ''
        
        width 100%
        height 100%
        
        background rgba(0,0,0,.4)
        
        position absolute
        top 0
        left 0
        z-index 1
    }
    
    h1 {
        margin auto
        margin-bottom 45px
        
        font-size 70px
        color #ff9800
        
        text-transform uppercase
        
        z-index 2
    }
    
    p {
        margin auto
        font-size 29px
        
        text-align center
        
        z-index 2
    }
}

.skills {
    height 100vh
            
    background url('../images/school.png')
    
    text-align center
    
    padding 300px 12.5%
        
    h2 {
        margin-bottom 50px
        text-transform uppercase
    }
    
    .skills-wrapper {
        display flex
        justify-content space-between
    }
    
    article {
        text-align center
        h3 {
            text-transform uppercase
            margin-bottom 20px
            
            font-size 26px
        }
        ul {
            list-style none
            li {
                font-size 22px
                          
            }
        }
    }
}

.portfolio {
    height 100vh
    
    background url('../images/concrete_seamless.png')
    text-align center
    
    padding 100px 12.5%
    
    h2 {
        text-transform uppercase
        margin-bottom 40px
    }
    
    .projects {
        list-style none
        
        display flex
        justify-content space-between
        flex-wrap wrap
        
        &__item {
            width 32.5%
            height 300px
            
            margin-bottom 20px
            
            background white
            
            text-align center
            
            position relative
            z-index 1
                        
            transition .5s
                                    
            &:hover {
                transform scale(1.15)
                z-index 2
                transition .5s
                a {
                    display inline-block
                    opacity 1
                }
                &:before {
                    display block
                    content ""
                    
                    width 100%
                    height 100%
                    
                    background-color rgba(0,0,0,.2)
                    
                    position absolute
                    top 0
                    left 0
                    z-index 6
                                        
                }
            }
            
            img {
                width 100%
                height 100%
                
                position absolute
                top 0 
                left 0
                z-index -1
                
            }
            
            a {
                
                display inline-block
                
                background-color #888888
                                
                margin-right 15px
                                
                padding 5px 15px
                
                border-radius 5px
                
                font-size 16px
                text-transform uppercase
                text-decoration none
                color white
                
                opacity 0
                
                transition .5s
                                
                position relative
                top 46%
                left 0
                
                z-index 6
                
                &:hover {
                    background-color #5f5f5f
                }
            }
        }
    }
}

.contacts {
    
    background url('../images/cork-wallet.png')
    padding 200px 12.5%
    text-align center
    
    h2 {
        font-size 40px
        text-transform uppercase
        
        margin-bottom 40px
    }
    p {
        font-size 25px
        margin-bottom 30px
    }
    
    .e-mail {
        display inline-block
        margin-right 50px
        span{
            font-size 30px
            margin-right 30px
        }
        a {
            font-size 30px
            text-decoration none
            color #75bfff
        }
    }
    .skype {
        display inline-block
        span {
            font-size 30px
            margin-right 30px
        }
        a {
            font-size 30px
            text-decoration none
            color #75bfff
        }
    }
}